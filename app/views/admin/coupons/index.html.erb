<h1>Listing Coupons</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Max users</th>
    <th>Value</th>
    <th>Validity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @coupons.each do |coupon| %>
  <tr>
    <td><%= coupon.name %></td>
    <td><%= coupon.code %></td>
    <td><%= coupon.max_users %></td>
    <td><%= coupon.value %></td>
    <td><%= coupon.validity %></td>
    <td><%= link_to 'Show', [:admin, coupon] %></td>
    <td><%= link_to 'Edit', edit_admin_coupon_path(coupon) %></td>
    <td><%= link_to 'Destroy', [:admin, coupon], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

